{
  "name": "micro-react",
  "module": "index.ts",
  "type": "commonjs",
  "scripts": {
    "dev": "bun run index.ts",
    "edge-worker-proxy": "bun run src/edge-worker-proxy/server.ts",
    "esi-proxy": "bun run src/esi-proxy/server.ts",
    "build": "npm run build:css-modules && npm run build:micro-roots && npm run build:micro-roots-cjs",
    "watch": "vite build --watch -c vite.config.ts & npm run watch:css-modules",
    "build:micro-roots": "vite build -c vite.config.ts",
    "build:micro-roots-cjs": "BUNDLE_TARGET=cjs vite build -c vite.config.ts",
    "build:components-server": "tsc --project tsconfig.components-server.json",
    "run:components-server": "node ./server-dist/index.js",
    "watch:micro-roots": "vite build --watch -c vite.config.ts",
    "build:css-modules": "tcm ./src -p '**/*.module.css'",
    "watch:css-modules": "npm run build:css-modules -- --watch",
    "check:up-to-date-types": "tcm --listDifferent ./src -p '**/*.module.css'",
    "`prepare`": "husky install"
  },
  "devDependencies": {
    "@types/express-http-proxy": "^1.6.5",
    "bun-types": "latest",
    "husky": "^8.0.0",
    "typescript": "^5.2.2"
  },
  "dependencies": {
    "@tabler/icons-react": "^2.40.0",
    "@types/body-parser": "^1.19.3",
    "@types/express": "^4.17.19",
    "@types/react": "^18.2.28",
    "@types/react-dom": "^18.2.13",
    "body-parser": "^1.20.2",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-http-proxy": "^2.0.0",
    "husky-init": "^8.0.0",
    "node-html-parser": "^6.1.11",
    "nodesi": "^1.17.0",
    "react": "18.2.0",
    "react-dom": "18.2.0",
    "styled-components": "^6.1.0",
    "typed-css-modules": "^0.8.1",
    "vite": "^4.4.11"
  }
}
